{
  "name": "@goobits/codeflow-buddy",
  "version": "1.0.1",
  "description": "MCP server for accessing LSP functionality",
  "main": "dist/index.js",
  "bin": {
    "codeflow-buddy": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "bun build --target=node --outdir=dist index.ts",
    "dev": "bun run --watch index.ts",
    "start": "node dist/index.js",
    "test": "bun test tests/unit",
    "test:fast": "node test-runner-fast.cjs",
    "test:minimal": "node test-runner-minimal.cjs",
    "test:fast:old": "bun test tests/unit tests/core/quick.test.ts tests/integration/lsp-client.test.ts",
    "test:slow": "bun test tests/core/comprehensive.test.ts tests/core/error-cases.test.ts tests/integration/multi-*.test.ts tests/integration/workspace-*.test.ts tests/integration/call-hierarchy.test.ts tests/integration/delete-file-enhanced.test.ts",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:core": "bun test tests/core",
    "test:all": "bun test",
    "test:mcp": "bun test tests",
    "test:mcp:quick": "bun test tests/core/quick.test.ts",
    "test:mcp:full": "bun test tests/core/comprehensive.test.ts",
    "test:mcp:intelligence": "bun test tests/core/intelligence.test.ts",
    "test:mcp:playground": "bun test tests/core/playground.test.ts",
    "test:mcp:core": "bun test tests/core",
    "test:mcp:unit": "bun test tests/unit",
    "test:mcp:restart": "bun test tests/unit/restart-server.test.ts",
    "test:multifile": "bun test tests/integration/multi-file-rename.test.ts",
    "test:multifile:path": "bun test tests/integration/multi-file-rename-file.test.ts",
    "test:complete": "npm run build && npm run test:all && npm run test:mcp",
    "test:quick": "npm run test:fast",
    "test:ci": "npm run test:fast && npm run test:slow",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "lint:fix-unsafe": "biome check --fix --unsafe .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "dead-code": "knip",
    "dead-code:fix": "knip --fix",
    "dead-code:ci": "knip --no-progress --reporter json"
  },
  "keywords": [
    "mcp",
    "lsp",
    "language-server",
    "model-context-protocol",
    "claude-code"
  ],
  "author": "nano",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goobits/codeflow-buddy.git"
  },
  "homepage": "https://github.com/goobits/codeflow-buddy#readme",
  "bugs": {
    "url": "https://github.com/goobits/codeflow-buddy/issues"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "CLAUDE.md",
    "codebuddy.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "ignore": "^7.0.5",
    "vscode-langservers-extracted": "^4.10.0",
    "yaml-language-server": "^1.15.0",
    "bash-language-server": "^5.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/node": "^24.5.2",
    "knip": "^5.63.1",
    "memfs": "^4.42.0",
    "typescript": "^5.9.2",
    "typescript-language-server": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
