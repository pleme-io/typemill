{
  "entry": [
    "index.ts",
    "tests/**/*.test.ts",
    "src/cli/commands/*.ts"
  ],
  "project": [
    "src/**/*.ts"
  ],
  "ignore": [
    "dist/**",
    "node_modules/**",
    "**/*.d.ts"
  ],
  "ignoreDependencies": [
    "@types/*",
    "typescript-language-server",
    "memfs"
  ],
  "ignoreBinaries": [],
  "includeEntryExports": true,
  "ignoreExportsUsedInFile": true,
  "rules": {
    "files": "error",
    "dependencies": "error",
    "devDependencies": "error",
    "unlisted": "error",
    "binaries": "error",
    "unresolved": "error",
    "exports": "error",
    "nsExports": "error",
    "nsTypes": "error",
    "types": "error",
    "enumMembers": "error",
    "classMembers": "error",
    "duplicates": "error"
  }
}