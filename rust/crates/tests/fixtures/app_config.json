{
  "server": {
    "host": "127.0.0.1",
    "port": 3000,
    "maxClients": 10,
    "timeoutMs": 120000,
    "tls": null,
    "auth": {
      "jwtSecret": "test-secret",
      "jwtExpirySeconds": 86400,
      "jwtIssuer": "codeflow-buddy",
      "jwtAudience": "codeflow-clients"
    }
  },
  "lsp": {
    "servers": [
      {
        "extensions": ["ts", "tsx", "js", "jsx"],
        "command": ["typescript-language-server", "--stdio"],
        "rootDir": null,
        "restartInterval": 5
      },
      {
        "extensions": ["py"],
        "command": ["pylsp"],
        "rootDir": null,
        "restartInterval": 5
      }
    ],
    "defaultTimeoutMs": 30000,
    "enablePreload": true
  },
  "fuse": {
    "mountPoint": "/tmp/codeflow",
    "readOnly": false,
    "cacheTimeoutSeconds": 60,
    "maxFileSizeBytes": 10485760
  },
  "logging": {
    "level": "info",
    "format": "json",
    "file": {
      "path": "/tmp/codeflow.log",
      "maxSizeBytes": 10485760,
      "maxFiles": 3
    }
  },
  "cache": {
    "enabled": true,
    "ttlSeconds": 3600,
    "maxSizeBytes": 104857600,
    "persistent": false,
    "cacheDir": null
  }
}