{
  "workflows": {
    "refactor.renameSymbol": {
      "name": "Rename '{old_name}' to '{new_name}'",
      "metadata": {
        "complexity": 2
      },
      "steps": [
        {
          "tool": "find_references",
          "params": {
            "file_path": "{file_path}",
            "symbol_name": "{old_name}"
          },
          "description": "Find all references to the symbol '{old_name}'.",
          "requires_confirmation": null
        },
        {
          "tool": "apply_workspace_edit",
          "params": {
            "new_name": "{new_name}",
            "description": "This will be populated by the output of the previous step.",
            "changes": {}
          },
          "description": "Apply the rename changes across all found references.",
          "requires_confirmation": true
        }
      ],
      "required_params": ["file_path", "old_name", "new_name"]
    },
    "refactor.extractFunction": {
      "name": "Extract function '{function_name}'",
      "metadata": {
        "complexity": 1
      },
      "steps": [
        {
          "tool": "extract_function",
          "params": {
            "file_path": "{file_path}",
            "start_line": "{start_line}",
            "end_line": "{end_line}",
            "function_name": "{function_name}"
          },
          "description": "Extract lines {start_line}-{end_line} into function '{function_name}'",
          "requires_confirmation": null
        }
      ],
      "required_params": ["file_path", "start_line", "end_line", "function_name"]
    },
    "docs.generateDocstring": {
      "name": "Generate documentation for '{symbol_name}'",
      "metadata": {
        "complexity": 3
      },
      "steps": [
        {
          "tool": "get_document_symbols",
          "params": {
            "file_path": "{file_path}"
          },
          "description": "Find the location of symbol '{symbol_name}'",
          "requires_confirmation": null
        },
        {
          "tool": "get_hover",
          "params": {
            "file_path": "{file_path}",
            "line": "$steps.0.symbols.0.range.start.line",
            "character": "$steps.0.symbols.0.range.start.character"
          },
          "description": "Get signature information for '{symbol_name}'",
          "requires_confirmation": null
        },
        {
          "tool": "apply_workspace_edit",
          "params": {
            "changes": {
              "{file_path}": [
                {
                  "range": {
                    "start": {
                      "line": "$steps.0.symbols.0.range.start.line",
                      "character": 0
                    },
                    "end": {
                      "line": "$steps.0.symbols.0.range.start.line",
                      "character": 0
                    }
                  },
                  "newText": "/**\n * TODO: Add documentation here\n *\n * Context from analysis: $steps.1.contents\n * This placeholder should be replaced with proper documentation.\n */\n"
                }
              ]
            }
          },
          "description": "Insert placeholder docstring above symbol",
          "requires_confirmation": null
        }
      ],
      "required_params": ["file_path", "symbol_name"]
    },
    "refactor.renameSymbolWithImports": {
      "name": "Rename symbol '{old_name}' to '{new_name}' with import updates",
      "metadata": {
        "complexity": 2
      },
      "steps": [
        {
          "tool": "rename.plan",
          "params": {
            "target": {
              "kind": "symbol",
              "path": "{file_path}",
              "selector": {
                "symbol_name": "{old_name}"
              }
            },
            "new_name": "{new_name}"
          },
          "description": "Generate rename plan for '{old_name}' â†’ '{new_name}'",
          "requires_confirmation": null
        },
        {
          "tool": "workspace.apply_edit",
          "params": {
            "plan": "$steps.0.plan",
            "options": {
              "validate_checksums": true,
              "dry_run": false
            }
          },
          "description": "Apply rename changes across the project",
          "requires_confirmation": true
        }
      ],
      "required_params": ["file_path", "old_name", "new_name"]
    },
    "research.topic": {
      "name": "Research topic '{topic}'",
      "metadata": {
        "complexity": 2
      },
      "steps": [
        {
          "tool": "google_search",
          "params": {
            "query": "{topic}"
          },
          "description": "Search for information about '{topic}'",
          "requires_confirmation": null
        },
        {
          "tool": "web_fetch",
          "params": {
            "url": "$steps.0.results.0.url"
          },
          "description": "Fetch the content of the top search result",
          "requires_confirmation": null
        }
      ],
      "required_params": ["topic"]
    }
  }
}