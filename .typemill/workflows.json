    "workspace.prepareForExtraction": {
      "name": "Prepare '{crateName}' for extraction",
      "metadata": {
        "complexity": 3,
        "category": "workspace",
        "description": "Analyze module dependencies before extracting a crate"
      },
      "steps": [
        {
          "tool": "analyze.module_dependencies",
          "params": {
            "crate_name": "{crateName}"
          },
          "description": "Analyze module dependencies"
        },
        {
          "tool": "analyze.dependencies",
          "params": {
            "scope": {
              "kind": "directory",
              "path": "{cratePath}"
            }
          },
          "description": "Analyze external dependencies"
        }
      ],
      "required_params": ["crateName", "cratePath"],
      "optional_params": []
    },
    "test.analyzeCoverage": {
      "name": "Analyze test coverage for '{directory}'",
      "metadata": {
        "complexity": 2,
