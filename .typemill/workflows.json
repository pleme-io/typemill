      },
      "steps": [
        {
          "tool": "analyze.tests",
          "params": {
            "scope": {
              "kind": "directory",
              "path": "{directory}"
            }
          },
          "description": "Analyze test coverage and quality"
        },
        {
          "tool": "analyze.structure",
          "params": {
            "scope": {
              "kind": "directory",
              "path": "{directory}"
            }
          },
          "description": "Analyze code structure for untested areas"
        }
      ],
      "required_params": ["directory"],
      "optional_params": []
    },
    "cleanup.removeDeadCode": {
      "name": "Find and suggest dead code removal in '{scope}'",
      "metadata": {
        "complexity": 2,
        "category": "cleanup",
        "description": "Find unused code and suggest removal"
      },
      "steps": [
        {
          "tool": "analyze.dead_code",
          "params": {
            "scope": {
              "kind": "{scopeKind}",
              "path": "{scope}"
            }
          },
          "description": "Find all dead code"
        }
      ],
      "required_params": ["scope", "scopeKind"],
      "optional_params": []
    }
  }
}
